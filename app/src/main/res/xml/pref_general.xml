        android:title="@string/settings_display" />
    <ListPreference
        android:defaultValue="1"
        android:dialogIcon="@drawable/ic_menu_tutorial"
        android:enabled="true"
        android:entries="@array/color_list"
        android:entryValues="@array/color_list_values"
